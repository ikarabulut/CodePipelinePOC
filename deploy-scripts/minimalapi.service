[Unit]
Description=.NET Minimal API

[Service]
WorkingDirectory=/var/minimalapi/
ExecStart=./MinimalApi
Restart=always

RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=webapi
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=ASPNETCORE_URLS=http://*:5000

[Install]
WantedBy=multi-user.target
